<section id="all-rides">
  <div class="d-flex justify-content-center flex-column align-items-center">
    <% if (riderOrders.length === 0) {%>
    <h2 class="mt-3 mb-4 text-center highlight">No Rides Yet</h2>
    <% } else { %>
    <h2 class="my-3 text-center highlight">List of all Vehicles Rented</h2>
    <% } %>
  </div>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <% riderOrders.forEach((riderOrder, i) => { %>
      <div class="col-md-4 col-sm-10 box pt-3 pb-4 m-3">
        <div class="d-flex justify-content-center align-items-center">
          <table>
            <tr>
              <td>
                <span class="bold">Vehicle : </span>
                <%= riderOrder.bookedVehicle.vehicleName %>
              </td>
              <td>
                <span class="bold">Vehicle Owner : </span>
                <%= riderOrder.bookedVehicle.renterName %>
              </td>
            </tr>
            <tr>
              <td>
                <span class="bold">Type : </span>
                <%= (riderOrder.bookedVehicle.type === 2) ? "Two Wheeler" :
                "Four Wheeler"; %>
              </td>
              <td>
                <span class="bold">Status : </span>
                <%= riderOrder.status %>
              </td>
            </tr>
            <tr>
              <td>
                <span class="bold">Placed At : </span>
                <%= moment(riderOrder.createdAt).format('hh:mm') %>
              </td>
              <td>
                <span class="bold">Booked On : </span>
                <%= moment(riderOrder.createdAt).format('DD-MM-YYYY') %>
              </td>
            </tr>
            <tr>
              <td>
                <span class="bold">Bill : </span>
                &nbsp;<i class="fa-solid fa-indian-rupee-sign"></i>
                <%= riderOrder.bill %>
              </td>
              <td>
                <span class="bold">Booked For : </span>
                <%= riderOrder.bookingDuration %> <%=
                (riderOrder.bookingDuration === 1) ? "Day" : "Days"; %>
              </td>
            </tr>
            <tr>
              <td colspan="2" class="text-center">
                <button
                  onclick="location.href = `/rider-profile/all-orders/single-order/<%= riderOrder._id %>`;"
                  class="btn-outline-custom white"
                >
                  Order Details
                </button>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
